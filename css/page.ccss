// This file is for site-wide styling. This will be used for all standard pages.

// Based on Eric Meyer's CSS Reset - http://meyerweb.com/eric/thoughts/2007/05/01/reset-reloaded/

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, font, img, ins, kbd, q, s, samp, small, strike, strong, tt, var, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td:
  margin: 0
  padding: 0
  border: 0
  outline: 0
  font->
    weight: inherit
    style: inherit
    size: 100%
    family: inherit
  vertical-align: baseline

// remember to define focus styles!
:focus:
  outline: 0

h1, h2, h3, h4, h5, h6, p, ol, ul, dl, table:
  font-family: Verdana, sans-serif

a:
  color: $primary_light
  &:visited:
    color: $primary_dark
  &:focus:
    outline: 1px dotted black

body:
  line-height: 1
  color: black
  background: white

ol, ul:
  list-style: none
  margin->
    top: 1.3em
    bottom: 1.3em
  li:
    margin->
      top: 0.667em
      bottom: 0.667em

// tables still need 'cellspacing="0"' in the markup
table:
  border->
    collapse: separate
    spacing: 0

th, td:
  text-align: left
  font-weight: normal
  vertical-align: middle

caption:
  text-align: center
  font-weight: normal

form > table:
  border-spacing: 0.5em
  th:
    text-align: right
  tfoot:
    td:
      text-align: center

fieldset:
  margin->
    top: 1.3em
    bottom: 1.3em
  & > p:
    margin-top: 0

blockquote:before, blockquote:after, q:before, q:after:
        content: \"\"

blockquote, q:
        quotes: \"\" \"\"

// Initialize the page and provide helpers.

h1, h2, h3:
  font-weight: bold

// Font sizes initially taken from http://webtypography.net/Harmony_and_Counterpoint/Size/3.1.1/

h1:
  font-size: 2.25em
  text-align: center
  line-height: 1.156
  margin->
    top: 0.578em
    bottom: 0.578em

h2:
//  font-size: 1.5em
  font-size: 1.3em
//  line-height: 0.867
  line-height: 1.154
  margin->
    top: 1em
    bottom: 1em
//    top: 0.867em
//    bottom: 0.867em

h3:
  font-size: 1.125em
  line-height: 1.156

h4:
  text-align: center
  font-size: 0.875em
  line-height: 1.486
  margin->
    top: 1.486em
    bottom: 1.486em

p:
  line-height: 1.3
  margin->
    top: 1.3em
    bottom: 1.3em

th, td:
  line-height: 1.3

li:
  line-height: 1.3

a:
  text-decoration: none
  &:hover:
    text-decoration: underline

b, strong:
  font-weight: bold

em:
  font-style: oblique

.clear:
  clear: both

.even:
  background-color: #EEE
tr.odd:hover, tr.even:hover:
  background-color: #DDD

// Top-Level Page Elements

#body:
  margin: 1.3em

#header-bar, #footer-bar:
  background-color: $bar_and_box_background
  margin: 0
  clear: both

#header-bar:
  padding->
    left: 0.75em
    right: 0.75em
    top: 0.5em
    bottom: 0.5em
  font-family: Verdana, sans-serif
  a.logo:
    display: block
    float: left
    font->
      size: 1.25em
      weight: bold
    color: black
    line-height: 1.0
    .tagline:
      font->
        size: 0.75em
        weight: normal
  .logo, .auth-box, .search-box, .review-box:
    display: inline
    line-height: 1.3
  .logo, .search-box, .review-box:
    margin-right: 1em
  .search-box, .auth-box, .review-box:
    float: right
  .search-box, .auth-box, .review-box, .hyperlinks:
    margin->
      top: 0.5em
      bottom: 0
  .auth-box.logout input:
    margin-left: 1em
  ul.hyperlinks:
    margin->
      left: 3em
    float: left
    li:
      margin->
        left: 0.5em
        right: 0.5em

#footer-bar:
  clear: both
  text-align: center
  padding->
    top: 0.5em
    bottom: 0.5em
  *:
    margin->
      top: 0.125em
      bottom: 0.125em
  ul.hyperlinks li:
    margin->
      left: 0.5em
      right: 0.5em

#main-content:
  width: 67%
  float: left
  h1:
    margin-top: 0

#sidebar:
  width: 30%
  float: right
  .sidebox:
    margin-bottom: 1.3em
    background-color: $bar_and_box_background
    ul, ol:
      margin->
        left: 0.667em
        right: 0.667em
        top: 0
        bottom: 0.667em
      li:
        margin-top: 0.333em
        text-align: center
        a:
          line-height: 1.667
    h3:
      text-align: center
      margin->
        top: 0.667em
        bottom: 0.667em

// And these are web links.
ul.hyperlinks:
  margin-left: 0
  padding-left: 0
  li:
    display: inline

p.copyright:
  margin: 0
  text-align: center
  clear: both

// The Pager is used to page results that won't fit on a single page.

.pager:
  text-align: center
  margin->
    top: 1.3em
    bottom: 1.3em
  // Group controls in a box so that they can be logically associated.
  .controls:
    border: 1px solid black
    background-color: #DDD
    padding: 0.5em
    .next:
      margin-left: 2em
  // Links should never turn the "visited" color for paging. It's logically correct, but people have come to expect otherwise.
  a:
    color: $primary_light
  // Grey out controls that can't be used.
  span:
    &.prev, &.next:
      color: #666

.breadcrumbs:
  li:
    display: inline
  margin-bottom: 1.3em

noscript > p:
  width: 33em
  margin->
    left: auto
    right: auto
  background-color: pink
  text-align: center

form:
  table:
    margin->
      left: auto
      right: auto
    input[type=text], input[type=password], textarea:
      width: 25em
    textarea:
      height: 10em
  > ul:
    text-align: center

// pull quotes (http://en.wikipedia.org/wiki/Pull_quote)
blockquote:
  width: 15em
  padding: 1em
  border->
    top: 3px solid $bar_and_box_border
    bottom: 3px solid $bar_and_box_border
  background-color: $bar_and_box_background
  p:
    margin: 0
    text-align: center
    font->
      size: 1.125em
      style: italic
      family: Georgia, serif
  &.right:
    float: right
    clear: right
    margin-left: 1.3em
  &.left:
    float: left
    clear: left
    margin-right: 1.3em

.footnote:
  font-size: 0.875em
  line-height: 1.486
  margin->
    top: 1.486em
    bottom: 1.486em

// Buttons!
.button:
  line-height: 1.3em
  color: inherit
  font-size: 0.875em
  margin->
    left: 0.667em
    right: 0.667em
  img:
    vertical-align: middle

button, input:
  line-height: 1.3em
  vertical-align: middle

.column:
  float: left

#left.column:
  width: 30%

#center.column:
  width: 33%
  margin->
    left: 1.5%
    right: 4.5%
  img:
    display: block
    margin: 1.3em auto
    width: 95%
    // border: 6px solid $primary_light

#right.column:
  width: 30%

.boxer:
  h2:
    margin-top: 0

.sidebar:
  float: left
  width: 25%

.article:
  width: 50%
  margin-left: auto
  margin-right: auto
  dl:
    border: 3px double #CCC
    padding: 0.667em 0.667em 0 0.667em
    margin: 1.3em
    dt:
      float: left
      clear: left
      line-height: 1.3em
      width: 3em
      text-align: right
      font-weight: bold
      &:after:
        content: ":"
    dd:
      line-height: 1.3em
      margin->
        left: 4.3em
        bottom: 0.667em
  ul:
    list-style-type: disc
    margin-left: 1em
  ol:
    list-style-type: decimal
    margin-left: 1.5em
  code:
    font-family: Courier New, monospace
    font-weight: bold
  .updated:
    text-align: center
    font-size: 0.875em
